<%= render 'partials/header' %>

  <p id="notice"><%= notice %></p>

  <div class="profileSection">

    <h1>Profile</h1>



    <div id="uiCard" class="ui card">
      <div class="image">
        <img src="https://tracker.moodle.org/secure/attachment/30912/f3.png">
      </div>


      <div class="content">
          <div class="header">
            <p>
              <strong>Name:</strong>
              <%= @user.name %>
            </p>
          </div>

        <div class="header">
          <p>
            <strong>Login:</strong>
            <%= @user.login %>
          </p>
        </div>

      </div>
      <div class="extra content">
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>
      </div>

    </div>


    <div class="ui buttons"  id="optionBtn">
      <div class="ui grey button">
        <%= link_to 'Back', users_path %>
      </div>

      <div class="or"></div>

      <div class="ui positive button">
        <%= link_to 'Edit', edit_user_path(@user) %>
      </div>
    </div>
  </div>

<%= render 'partials/footer' %>
