<%= render 'partials/header' %>

<p id="notice"><%= notice %></p>

<div id="mainContainer">
  <h1><i class="users icon"></i>Users</h1>

  <table>
    <thead>
      <tr>
        <th><h4><i class="user icon"></i>Name</h4></th>
        <th><h4><i class="mail icon"></i>Email</h4></th>
        <th><h4><i class="sign in icon"></i>Login</h4></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><img class="ui avatar image" src="https://tracker.moodle.org/secure/attachment/30912/f3.png"><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.login %></td>
          <td><button class="ui floated basic green button"><%= link_to 'Show', user %></button></td>
          <td><button class="ui teal basic button"><%= link_to 'Edit', edit_user_path(user) %></button></td>
          <td><button class="ui negative basic button"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <button class="ui basic button huge newBtn" id="newBtn"><i class="add user icon"></i><%= link_to 'Add New User', new_user_path %></button>
</div>

<%= render 'partials/footer' %>
